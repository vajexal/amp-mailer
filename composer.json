{
    "name": "vajexal/amp-mailer",
    "description": "SMTP mailer for amphp",
    "keywords": [
        "smtp",
        "amphp",
        "mail"
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-iconv": "*",
        "ext-intl": "*",
        "amphp/file": "^1.0",
        "amphp/log": "^1.1",
        "amphp/socket": "^1.1",
        "egulias/email-validator": "^2.1",
        "vajexal/amp-mime-type": "dev-master"
    },
    "require-dev": {
        "ext-json": "*",
        "amphp/http-client": "^4.5",
        "amphp/php-cs-fixer-config": "dev-master",
        "amphp/phpunit-util": "^1.4",
        "amphp/process": "^1.1",
        "sebastian/diff": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Vajexal\\AmpMailer\\": "src"
        },
        "files": [
            "src/Smtp/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Vajexal\\AmpMailer\\Tests\\": "tests"
        },
        "files": [
            "tests/functions.php"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
